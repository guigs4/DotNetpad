<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DotNetpadUI.MainWindow"
        Title=".Netpad"
		BorderThickness=".1" >
	<Window.Styles>
		<Style Selector="TabItem">
			<Setter Property="FontSize" Value="16"/>
		</Style>
	</Window.Styles>
    <Grid ShowGridLines="True" Margin="0">
        <Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="12"></RowDefinition>
		</Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
		<TabControl Grid.Row="0" Margin="0">
			<TabItem Header="Current File" Margin="0">
				<TextBox AcceptsReturn="True" BorderThickness="0" AcceptsTab="True"
						 ></TextBox>
			</TabItem>
			<TabItem Header="Current File 2" Margin="0">
				<TextBox AcceptsReturn="True" BorderThickness="0"></TextBox>
			</TabItem>
		</TabControl>
		
    </Grid>
</Window>
